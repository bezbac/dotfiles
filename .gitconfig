[alias]
	# Pretty log
	plog = log --graph --pretty='format:%C(red)%d%C(reset) %C(yellow)%h%C(reset) %ar %C(green)%aN%C(reset) %s'

	s = status
	wt = worktree

[core]
	editor = hx

[init]
	defaultBranch = main

[fetch]
	prune = true
	pruneTags = true
	all = true
[pull]
	ff = only
[push]
	autoSetupRemote = true
	default = simple

[rebase]
	autosquash = true
	updateRefs = false

[rerere]
	enabled = true
	autoupdate = true

[branch]
	sort = -committerdate

[commit]
	gpgsign = true
	verbose = true

[tag]
	sort = version:refname

[gpg]
	format = ssh

[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[help]
	autocorrect = prompt

[column]
    ui = auto

[diff]
	algorithm = histogram
	colorMoved = plain
	renames = true
